<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
</head>
<body class="uk-flex uk-flex-column">
<% include partials/header.ejs %>
<main>
    <section class="uk-section uk-section-small uk-section-secondary">
        <h2 class="uk-heading-primary uk-heading-bullet uk-text-center">Registered Profiles</h2>
    </section>
    <p><%= students['name'] %></p>
    <div class="uk-flex uk-container uk-flex-around uk-flex-wrap">
        <% for(var student in students){ %>
        <div class="uk-card uk-card-default uk-card-body uk-animation-fade uk-box-shadow-bottom">
            <div class="uk-card-header">
                <h4 class="uk-card-title">Name: <%= students[student].name %></h4>
            </div>
            <p>Department: <%= students[student].department %></p>
            <p>Sex: <%= students[student].gender %></p>
            <div class="uk-card-footer">
                <div class="uk-button-group" id="<%= students[student]._id %>">
                    <button class="uk-button uk-button-primary update uk-box-shadow-hover-small">Edit Details
                    </button>
                    <button class="uk-button uk-button-danger delete uk-box-shadow-hover-small">Remove</button>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <!--Modal For Viewing More-->
    <div class="uk-modal uk-modal-full" id="modal-full">
        <div class="uk-modal-dialog">
            <!--<button class="uk-modal-close" type="button" uk-close></button>-->
            <form>
                <div class="uk-modal-header uk-background-secondary uk-light">
                    <label for="name" class="uk-label uk-margin-remove uk-label-success">Full Name</label>
                    <h2 class="uk-modal-title uk-heading-line uk-text-center">
                        <input type="text" id="name"
                               class="name uk-input uk-form-blank uk-align-center uk-form-width-medium" name="name"
                               placeholder="Full Name">
                    </h2>
                    <input type="hidden" name="_id" class="_id">
                </div>
                <div class="uk-modal-body" uk-overflow-auto>
                    <section class="uk-section uk-section-muted uk-margin-remove uk-padding-remove">
                        <label for="department" class="uk-label uk-margin-remove uk-label-success">Department</label>
                        <p class=""><input type="text" class="department uk-input" id="department" name="department">
                        </p>
                    </section>

                    <section class="uk-section uk-section-muted uk-margin-remove uk-padding-remove">
                        <label for="dob" class="uk-label uk-margin-remove uk-label-success">Date Of Birth</label>
                        <p class=""><input type="date" class="dob uk-input" id="dob" name="dob"></p>
                        <label for="gender" class="uk-label uk-margin-remove uk-label-success">Gender</label>
                        <div class="uk-flex uk-flex-row uk-margin-left uk-margin-top">
                            <div class="uk-margin-right">
                                <label for="male" class="uk-form-label">Male
                                    <input type="radio" name="gender" id="male" class="uk-radio" value="Male">
                                </label>
                            </div>
                            <div>
                                <label for="female" class="uk-form-label">Female
                                    <input type="radio" name="gender" id="female" class="uk-radio" value="Female">
                                </label>
                            </div>
                        </div>
                    </section>

                    <div class="uk-divider-icon"></div>

                    <section class="uk-section uk-section-muted uk-margin-remove uk-padding-remove">
                        <label for="phone" class="uk-label uk-margin-remove uk-label-success">Phone number</label>
                        <p class=""><input type="text" class="phone uk-input" id="phone" name="phone"></p>
                        <label for="email" class="uk-label uk-margin-remove uk-label-success">Email</label>
                        <p class=""><input type="email" class="email uk-input" name="email" id="email"></p>
                    </section>

                </div>
                <div class="uk-modal-footer">
                    <button class="uk-button uk-button-secondary uk-align-left save" type="button" id="save">save
                    </button>
                    <button class="uk-modal-close uk-button uk-button-secondary uk-align-right" type="button">Close
                    </button>
                </div>
            </form>
        </div>

    </div>
</main>
<% include partials/footer.ejs %>
</body>
</html>
